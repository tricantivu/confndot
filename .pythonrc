# vim: et ts=4 tw=109

# Common imports
import os
import sys

# Prompt
"""
Consoles support some or all escape sequences defined in ANSI X3.64.

See screen(4), wscons(4) or console_codes(4) manuals for more information.
"""

match os.uname().sysname:
    case "Linux" | "linux":
        sys.ps1 = "\033[1m\033[32m>>>\033[0m "
        sys.ps2 = "\033[1m\033[37m...\033[0m "

    case "FreeBSD" | "freebsd":
        sys.ps1 = "\033[1m\033[32m>>>\033[0m "
        sys.ps2 = "\033[1m\033[37m...\033[0m "

    case "OpenBSD" | "openbsd":
        sys.ps1 = "\033[1m\033[32m>>>\033[0m "
        sys.ps2 = "\033[1m\033[37m...\033[0m "
